<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
    <defaultCache maxElementsInMemory="10" eternal="false"
                  timeToIdleSeconds="3" timeToLiveSeconds="200" />
    <cache name="lesson9.entity.Author"
           maxEntriesLocalHeap="4"
           eternal="false"
           timeToIdleSeconds="1"
           timeToLiveSeconds="3">
        <persistence strategy="localTempSwap"/>
    </cache>
    <cache name="org.hibernate.cache.StandardQueryCache"
           maxEntriesLocalHeap="2"
           eternal="false"
           timeToLiveSeconds="3">
        <persistence strategy="localTempSwap"/>
    </cache>
</ehcache>